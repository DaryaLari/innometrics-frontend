{
  "name": "activity_dashboard",
  "version": "0.1.0",
  "description": "Visualisation of users' working activity statistics",
  "main": "src/index.js",
  "scripts": {
    "with-dev-server": "set DOMAIN_ADDRESS='http://localhost:8090' && nodemon ./startServer.js",
    "dev": "webpack-serve",
    "build": "webpack",
    "prod": "webpack --mode production",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx ./src"
  },
  "keywords": [
    "dashboard",
    "activity",
    "statistics"
  ],
  "author": "d.larionova@innopolis.ru",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^23.3.8",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-jest": "^21.26.2",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^7.0.0",
    "moxios": "^0.4.0",
    "multer": "^1.4.1",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-test-renderer": "^16.6.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^0.23.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-client": "^4.1.1",
    "webpack-serve": "^2.0.2"
  },
  "optionalDependencies": {
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react-redux": "^5.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "recharts": "^1.3.5",
    "redux": "^4.0.1",
    "redux-form": "^7.4.2",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}"
    ],
    "testEnvironment": "enzyme",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/___mocks___/styleMock.js"
    },
    "globals": {
      "DOMAIN_ADDRESS": "http://localhost:8090"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|jsx)?$"
  }
}
